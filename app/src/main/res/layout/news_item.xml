<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/news_list_margin"
            android:layout_marginLeft="@dimen/news_list_margin"
            android:layout_marginRight="@dimen/news_list_margin"
            android:layout_toEndOf="@+id/ivPic"
            android:layout_toRightOf="@+id/ivPic"
            android:text="title"
            android:textStyle="bold"
            android:textSize="@dimen/news_list_title"
            android:textColor="@color/news_title"/>

        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/news_list_margin"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivPic"
            android:layout_alignLeft="@+id/tvTitle"
            android:layout_alignStart="@+id/tvTitle"
            android:layout_marginBottom="@dimen/news_list_margin"
            android:src="@mipmap/ic_browse">
        </ImageView>

        <TextView
            android:id="@+id/browseNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/browse"
            android:layout_alignBottom="@+id/ivPic"
            android:paddingLeft="4dp"
            android:layout_marginBottom="@dimen/news_list_margin"
            android:text="425"
            android:textSize="@dimen/news_list_item"
            android:textColor="@color/news_tab"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/browseNum"
            android:layout_alignBottom="@+id/ivPic"
            android:paddingLeft="16dp"
            android:layout_marginBottom="@dimen/news_list_margin"
            android:text="2小时前"
            android:textSize="@dimen/news_list_item"
            android:textColor="@color/news_tab"/>

        <ImageButton
            android:id="@+id/voice"
            style="@style/tab_news_item_voice"
            android:layout_alignBottom="@+id/ivPic"
            android:layout_alignRight="@+id/tvTitle"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="@dimen/news_list_margin"
            android:background="@mipmap/ic_voicestart">
        </ImageButton>

</RelativeLayout>